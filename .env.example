# TechTrainer Server Environment Configuration
# Copy this file to .env and fill in your actual values

# Server Configuration
NODE_ENV=production
PORT=5000
HOST=localhost

# Database Configuration
MONGO_URI=your_production_mongodb_connection_string
DB_NAME=techtrainer

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_here
JWT_EXPIRES_IN=7d

# API Configuration
API_URL=https://your-domain.com/api

# Client Configuration
CLIENT_URL=https://your-frontend-domain.com

# Twilio Configuration (optional)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# Optional Services
OPENAI_API_KEY=your_openai_api_key
STRIPE_PRICE_ID_INTERMEDIATE=your_stripe_price_id
STRIPE_PRICE_ID_ADVANCED=your_stripe_price_id
EMAIL_SERVICE=gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=noreply@techtrainer.com

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf
UPLOAD_DESTINATION=uploads/

# Cloudinary Configuration (for image uploads)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Logging Configuration
LOG_LEVEL=info
LOG_MAX_FILE_SIZE=10485760
LOG_MAX_FILES=5
LOG_DIRECTORY=logs

# API Configuration
API_VERSION=v1
API_BASE_URL=http://localhost:5000
API_DOCS_ENABLED=true
PAGINATION_DEFAULT_LIMIT=10
PAGINATION_MAX_LIMIT=100

# External Services
TEAMS_WEBHOOK_URL=https://outlook.office.com/webhook/your-webhook-url

# Fitness APIs (optional)
FITNESS_APIS_ENABLED=false
GOOGLE_FIT_API_KEY=your-google-fit-api-key
APPLE_HEALTH_API_KEY=your-apple-health-api-key

# Push Notifications (optional)
FCM_SERVER_KEY=your-fcm-server-key
APNS_CERT_PATH=path/to/apns/cert.pem
APNS_KEY_PATH=path/to/apns/key.pem

# Feature Flags
FEATURE_REGISTRATION=true
FEATURE_SOCIAL_LOGIN=false
FEATURE_EMAIL_VERIFICATION=true
FEATURE_2FA=false
FEATURE_ADMIN_PANEL=true
FEATURE_CHAT=true
FEATURE_NOTIFICATIONS=true

# Development Settings
DEV_SEED_DATA=false
DEV_MOCK_SERVICES=false
DEBUG=false

# CORS Origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:19006,capacitor://localhost

# Optional Services (can be left empty)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

OPENAI_API_KEY=your_openai_api_key

# Stripe (for payments)
STRIPE_PRICE_ID_INTERMEDIATE=your_stripe_price_id
STRIPE_PRICE_ID_ADVANCED=your_stripe_price_id
