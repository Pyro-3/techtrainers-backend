# TechTrainer Server Environment Configuration
# Copy this file to .env and fill in your actual values

# Server Configuration
NODE_ENV=development
PORT=5000
HOST=localhost

# Database Configuration
MONGO_URI=mongodb+srv://your-username:your-password@cluster.mongodb.net/techtrainer?retryWrites=true&w=majority
DB_NAME=techtrainer
DB_SERVER_TIMEOUT=40000
DB_CONNECT_TIMEOUT=40000
DB_MAX_POOL_SIZE=10
DB_MIN_POOL_SIZE=5
DB_MAX_IDLE_TIME=30000

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Security Configuration
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_TIME=300000
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Email Configuration (for notifications and password reset)
EMAIL_SERVICE=gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=noreply@techtrainer.com

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf
UPLOAD_DESTINATION=uploads/

# Cloudinary Configuration (for image uploads)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Logging Configuration
LOG_LEVEL=info
LOG_MAX_FILE_SIZE=10485760
LOG_MAX_FILES=5
LOG_DIRECTORY=logs

# API Configuration
API_VERSION=v1
API_BASE_URL=http://localhost:5000
API_DOCS_ENABLED=true
PAGINATION_DEFAULT_LIMIT=10
PAGINATION_MAX_LIMIT=100

# External Services
TEAMS_WEBHOOK_URL=https://outlook.office.com/webhook/your-webhook-url

# Fitness APIs (optional)
FITNESS_APIS_ENABLED=false
GOOGLE_FIT_API_KEY=your-google-fit-api-key
APPLE_HEALTH_API_KEY=your-apple-health-api-key

# Push Notifications (optional)
FCM_SERVER_KEY=your-fcm-server-key
APNS_CERT_PATH=path/to/apns/cert.pem
APNS_KEY_PATH=path/to/apns/key.pem

# Feature Flags
FEATURE_REGISTRATION=true
FEATURE_SOCIAL_LOGIN=false
FEATURE_EMAIL_VERIFICATION=true
FEATURE_2FA=false
FEATURE_ADMIN_PANEL=true
FEATURE_CHAT=true
FEATURE_NOTIFICATIONS=true

# Development Settings
DEV_SEED_DATA=false
DEV_MOCK_SERVICES=false
DEBUG=false

# CORS Origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:19006,capacitor://localhost
